@model List<Note>
@{
    ViewData["Title"] = "Note Page";
}

<div class="text-center">
    <h1 class="display-4">Notes</h1>
    <div>
        <form class="form-inline" asp-route="Index">
            <div class="form-group mx-sm-3 mb-2">
                <label for="text" class="sr-only">Note</label>
                <input type="text" class="form-control" id="text" name="text" placeholder="Just a note...">
            </div>
            <button type="submit" class="btn btn-primary mb-2">Add Note</button>
        </form>
    </div>

    <div class="text-center">
        @foreach (var note in Model)
        {
            <div>
                @await Html.PartialAsync("_Note", note)
            </div>
        }
    </div>

    @if (Model.Count == 0)
    {
        <p>
            No notes yet.
        </p>
    }
</div>
